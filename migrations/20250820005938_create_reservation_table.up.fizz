create_table("reservations") {
    t.Column("id", "integer", {primary: true, auto_increment: true})
    t.Column("first_name", "string", {"size": 255})
    t.Column("last_name", "string", {"size": 255})
    t.Column("email", "string", {"size": 255})
    t.Column("phone", "string", {"size": 255, default: ""})
    t.Column("start_date", "date", {})
    t.Column("end_date", "date", {})
    t.Column("room_id", "integer", {foreign_key: true, references: "rooms.id"})
}
